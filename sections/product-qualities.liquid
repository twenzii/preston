<div class="product-services-wrapper" style=" background-color: #ffffff">
  <div class="container">
    <div class="product-services-grid">
      
        {% for block in section.blocks %}
            <div class="product-service-item maximum-flexibility">
                {% if block.settings.icon != blank %}
                <img src="{{ block.settings.icon | img_url: 'master' }}" style="width: 40px; margin: 0 auto" class="product-service-image" >
                {% endif %}
                <div>
                <h4 class="product-service-title" style="color: #000000; font-size: 16px; margin: 0px 0 0 0">
                    <strong>{{block.settings.heading}}</strong>
                </h4>
                <p class="product-service-description" style="color: #000000; font-size: 13px; margin: 0px 0 0 0">
                   {{block.settings.content}}
                </p>
                </div>
            </div>
        {% endfor %}

    </div>
  </div>
</div>


{% schema %}
{
    "name":"Product Qualities",
    "max_blocks": 4,
    "settings": [],
    "blocks": [
        {
            "type": "Quality",
            "name":"Quality",
            "limit":4,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "icon",
                    "label":"Icon"
                },
                {
                    "type":"text",
                    "id": "heading",
                    "label":"Heading",
                    "default":"Heading"
                },
                {
                    "type":"inline_richtext",
                    "id": "content",
                    "label": "Content",
                    "default":"Neutralizes odor-causing bacteria to keep you fresh and confident, even when you sweat."
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Product Qualities"
        }
    ]
}
{% endschema %}